{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,

    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",

    "lib": ["dom", "es2020"],
    "esModuleInterop": true,

    "baseUrl": ".",
    "outDir": "./dist",

    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "src/*": ["./src/*"],
      "common/src/*": ["../common/src/*"]
    }
  },

  "include": ["./src/**/*", "./plugin-metadata.ts", "./plugin-extensions.ts"],

  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
